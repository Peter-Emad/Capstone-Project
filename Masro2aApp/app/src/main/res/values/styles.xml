<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDisablePreview">true</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="txtBlack">
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="txtSmallBlack" parent="txtBlack">
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="txtMediumBlack" parent="txtBlack">
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="txtLargeBlack" parent="txtBlack">
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="txtxLargeBlack" parent="txtBlack">
        <item name="android:textSize">@dimen/font_xlarge</item>
    </style>

    <style name="txtxxLargeBlack" parent="txtBlack">
        <item name="android:textSize">@dimen/font_xxlarge</item>
    </style>

</resources>
